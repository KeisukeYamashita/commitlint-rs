      "description": "Rules represents the rules of commitlint. See: https://commitlint.js.org/#/reference-rules",
      "type": "object",
      "properties": {
        "body-empty": {
          "anyOf": [
            {
              "$ref": "#/definitions/BodyEmpty"
            },
            {
              "type": "null"
            }
          ]
