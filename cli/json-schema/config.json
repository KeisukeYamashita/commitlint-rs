        },
        "scope-empty": {
          "anyOf": [
            {
              "$ref": "#/definitions/ScopeEmpty"
            },
            {
              "type": "null"
            }
          ]
        },
        "scope-format": {
          "anyOf": [
            {
              "$ref": "#/definitions/ScopeFormat"
            },
            {
              "type": "null"
            }
          ]
        },
        "scope-max-length": {
          "anyOf": [
            {
              "$ref": "#/definitions/ScopeMaxLength"
            },
            {
              "type": "null"
            }
          ]
        },
        "subject-empty": {
          "anyOf": [
            {
