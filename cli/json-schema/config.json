{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "description": "Config represents the configuration of commitlint.",
  "type": "object",
  "required": [
    "rules"
  ],
  "properties": {
    "rules": {
      "description": "Rules represents the rules of commitlint.",
      "allOf": [
        {
          "$ref": "#/definitions/Rules"
        }
      ]
    }
  },
  "definitions": {
    "BodyEmpty": {
      "description": "BodyEmpty represents the body-empty rule.",
      "type": "object",
      "properties": {
        "level": {
          "description": "Level represents the level of the rule.",
          "anyOf": [
            {
              "$ref": "#/definitions/Level"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "BodyMaxLength": {
      "description": "BodyMaxLength represents the body-max-length rule.",
      "type": "object",
      "required": [
        "length"
      ],
      "properties": {
        "length": {
          "description": "Length represents the maximum length of the body.",
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        },
        "level": {
          "description": "Level represents the level of the rule.",
          "anyOf": [
            {
              "$ref": "#/definitions/Level"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "DescriptionEmpty": {
      "description": "DescriptionEmpty represents the subject-empty rule.",
